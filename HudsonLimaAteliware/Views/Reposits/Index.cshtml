@model IEnumerable<HudsonLimaAteliware.Models.Reposit>

@{
    ViewBag.Title = "GitHub Repositories From Programing Languages";
}

@if (TempData["Success"] != null)
{
    <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
}


<h3>Lista de 5 linguagens e seu projeto com mais estrelas no GitHub.com</h3>

<p>
    <!-- Html.ActionLink("Create New", "Create") -->
    @Html.ActionLink("Atualiza Dados Github", "Atualiza")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InseridoNoBD)
        </th>
      <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Language)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InseridoNoBD)
        </td>
       
        <td>
          <!-- Html.ActionLink("Edit", "Edit", new { id=item.Id }) | -->
            @Html.ActionLink("Details", "Details", new { id=item.Id }) 
            <!-- Html.ActionLink("Delete", "Delete", new { id=item.Id }) -->
        </td>
    </tr>
}

</table>
